<%- include('../layouts/header') %>
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="card shadow-lg rounded-0">
        <div class="card-header bg-dark-subtle">
          <h3><i class="fas fa-graduation-cap me-2"></i>Student Results</h3>
        </div>

        <div class="card-body">
          <% if (error) { %>
          <div class="alert alert-danger alert-dismissible fade show">
            <%= error %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
            ></button>
          </div>
          <% } %> <% if (success) { %>
          <div class="alert alert-success alert-dismissible fade show">
            <%= success %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
            ></button>
          </div>
          <% } %>

          <ul class="nav nav-tabs mb-4" id="resultTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button
                class="nav-link active"
                id="individual-tab"
                data-bs-toggle="tab"
                data-bs-target="#individual"
                type="button"
                role="tab"
              >
                Individual Student
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link"
                id="class-tab"
                data-bs-toggle="tab"
                data-bs-target="#class"
                type="button"
                role="tab"
              >
                Class Results
              </button>
            </li>
          </ul>

          <div class="tab-content" id="">
            <!-- Individual Student Tab -->
            <div
              class="tab-pane fade show active"
              id="individual"
              role="tabpanel"
            >
              <div class="row">
                <div class="col-md-3">
                  <div class="">
                    <label class="form-label">Academic Year</label>
                    <select
                      name="academicYear"
                      class="form-select"
                      id="academicYearSelect"
                    >
                      <option value="">Current Academic Year</option>
                      <% academicYears.forEach(year => { %>
                      <option value="<%= year %>"><%= year %></option>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="col-md-3">
                  <div class="mb-3">
                    <label class="form-label">Exam Type</label>
                    <select class="form-select" id="examTypeSelect" required>
                      <option value="">Select Exam</option>
                      <% examTypeList.forEach(function(exam) { %>
                      <option value="<%= exam.id %>"><%= exam.name %></option>
                      <% }); %>
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label">Admission Number</label>
                    <div class="input-group">
                      <input
                        type="text"
                        class="form-control"
                        id="admissionNoInput"
                        placeholder="Enter admission number"
                        required
                      />
                      <button class="btn btn-success" id="searchStudentBtn">
                        Search
                      </button>
                    </div>
                  </div>
                </div>
              </div>

              <div id="studentResultContainer" class="mt-4 d-none">
                <div class="card mb-4">
                  <div
                    class="card-header bg-light flex justify-content-between"
                  >
                    <h4 class="mb-0">Student Information</h4>
                    <button
                      class="btn btn-sm btn-success"
                      id="downloadIndividualResultBtn"
                    >
                      <i class="fa-solid fa-download me-1"></i>Download
                    </button>
                  </div>
                  <div class="card-bodySelect">
                    <div class="row">
                      <div class="col-md-3">
                        <p class="mb-1">
                          <strong>Name:</strong> <span id="studentName"></span>
                        </p>
                      </div>
                      <div class="col-md-2">
                        <p class="mb-1">
                          <strong>Admission No:</strong>
                          <span id="studentAdmissionNo"></span>
                        </p>
                      </div>

                      <div class="col-md-3">
                        <p class="mb-1">
                          <strong>Exam:</strong> <span id="studentExam"></span>
                        </p>
                      </div>
                      <div class="col-md-3">
                        <p class="mb-1">
                          <strong>Class:</strong>
                          <span id="studentClass"></span>
                        </p>
                        <p class="mb-1">
                          <strong>Section:</strong>
                          <span id="studentSection"></span>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="table-responsive">
                  <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                      <tr>
                        <th>Subject</th>
                        <th>Code</th>
                        <th>Full Marks</th>
                        <th>Pass Marks</th>
                        <th>Obt. Marks</th>
                        <th>Percentage</th>
                        <th>Grade</th>
                        <th>Status</th>
                      </tr>
                    </thead>
                    <tbody id="studentSubjectsTable"></tbody>
                  </table>
                </div>

                <div class="card mt-4">
                  <div class="card-header bg-light">
                    <h4 class="mb-0">Result Summary</h4>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-3">
                        <p class="mb-1">
                          <strong>Total Marks:</strong>
                          <span id="totalMarks"></span>
                        </p>
                      </div>
                      <div class="col-md-3">
                        <p class="mb-1">
                          <strong>Percentage:</strong>
                          <span id="overallPercentage"></span>%
                        </p>
                      </div>
                      <div class="col-md-3">
                        <p class="mb-1">
                          <strong>CGPA:</strong> <span id="cgpa"></span>
                        </p>
                      </div>
                      <div class="col-md-3">
                        <p class="mb-1">
                          <strong>Status:</strong>
                          <span id="overallStatus" class="badge"></span>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Class Results Tab -->
            <div class="tab-pane fade" id="class" role="tabpanel">
              <form id="classResultForm" class="row g-3 mb-4">
                <div class="col-md-3">
                  <label class="form-label">Academic Year</label>
                  <select name="academicYear" class="form-select" id="classAcademicYear" required>
                    <option value="">Select Academic Year</option>
                    <% academicYears.forEach(year => { %>
                      <option value="<%= year %>"><%= year %></option>
                    <% }) %>
                  </select>
                </div>
              
                <div class="col-md-3">
                  <label class="form-label">Exam Type</label>
                  <select class="form-select" id="classExamType" required>
                    <option value="">Select Exam</option>
                    <% examTypeList.forEach(exam => { %>
                      <option value="<%= exam.id %>"><%= exam.name %></option>
                    <% }) %>
                  </select>
                </div>
              
                <div class="col-md-3">
                  <label class="form-label">Class</label>
                  <select class="form-select" id="classIdSelect">
                    <option value="">All Classes</option>
                    <% classes.forEach(cls => { %>
                      <option value="<%= cls.id %>"><%= cls.class_name %></option>
                    <% }) %>
                  </select>
                </div>
              
                <div class="col-md-3">
                  <label class="form-label">Section</label>
                  <select class="form-select" id="sectionIdSelect" disabled>
                    <option value="">All Sections</option>
                  </select>
                </div>
              
                <div class="col-12 text-end">
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search me-1"></i>Search Results
                  </button>
                </div>
              </form>

              <!-- Class Result Display -->
              <div id="classResultsContainer" class="d-none">
                <div class="card mb-3">
                  <div
                    class="card-header bg-light d-flex justify-content-between align-items-center"
                  >
                    <h5 class="mb-0" id="classResultsHeader">
                      Class Result Summary
                    </h5>
                    <div>
                      <button
                        class="btn btn-success btn-sm ms-2"
                        id="downloadClassResultsBtn"
                      >
                        <i class="fa-solid fa-file-pdf me-1"></i>PDF
                      </button>
                      <button
                        class="btn btn-info btn-sm ms-2"
                        id="downloadClassResultsCSV"
                      >
                        <i class="fa-solid fa-file-csv me-1"></i>CSV
                      </button>
                      <button
                        class="btn btn-secondary btn-sm ms-2"
                        id="printClassResultsBtn"
                      >
                        <i class="fa-solid fa-print me-1"></i>Print
                      </button>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-4">
                        <p>
                          <strong>Exam:</strong>
                          <span id="classExamName"></span>
                        </p>
                      </div>
                      <div class="col-md-4">
                        <p>
                          <strong>Class:</strong> <span id="className"></span>
                        </p>
                      </div>
                      <div class="col-md-4">
                        <p>
                          <strong>Section:</strong>
                          <span id="sectionName"></span>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="table-responsive">
                  <table
                    class="table table-striped table-bordered table-hover"
                    id="classResultsTable"
                  >
                    <thead class="table-dark">
                      <tr>
                        <th>S.N.</th>
                        <th>Student Name</th>
                        <th>Admission No</th>
                        <th>Total Marks</th>
                        <th>Percentage</th>
                        <th>CGPA</th>
                        <th>Status</th>
                       
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <!-- Results will be populated here -->
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer') %>

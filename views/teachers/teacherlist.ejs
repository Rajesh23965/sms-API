<%- include("../layouts/header")%>

<div class="">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="card shadow-lg rounded-0">
          <div class="card-header bg-gradient text-capitalize  d-flex flex-row justify-content-between align-items-center">
            <a class="btn btn-success rounded-1 shadow" href="/teachers/teacher-form">Add teacher</a>
            <h3><i class="fas fa-user-graduate me-2"></i>Teachers List</h3>
          </div>
          <div class="card-body p-4">
           
  
            <% if (success && typeof success === 'string' && success.trim() !== '') { %>
              <div class="alert alert-success"><%= success %></div>
            <% } %>

            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>S.N</th>
                        <th>Teacher name</th>
                        <th>Assigned class</th>
                        <th>Assigned section</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (teacherlist) { %>
                        <% let i = 0; %>
                        <% teacherlist.forEach(function(tl) { %>
                            <tr>
                                <td><%= ++i %></td>
                                <td><%= tl.name %></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <a class="btn btn-outline-success fa fa-edit" href=""></a>
                                    <a class="btn btn-outline-danger fa fa-trash" href=""></a>

                                </td>

                            </tr>
                        <% }); %>
                    <% } %>
                    
                 
                </tbody>
                
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('../layouts/footer') %>



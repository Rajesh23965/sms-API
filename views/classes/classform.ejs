<%- include('../layouts/header') %>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="card shadow-lg rounded-0">
        <div class="card-header bg-dark-subtle text-capitalize d-flex justify-content-between align-items-center">
          <h3><i class="fas fa-user-graduate me-2"></i>Class setup</h3>
        </div>

        <div class="card-body p-2 border">
          <% if (success) { %>
            <div class="alert alert-success"><%= success %></div>
          <% } %>
          <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>

          <div class="card-header mb-3 bg-danger text-light">
            <h5>Class Details</h5>
          </div>

          <div class="row">
            <div class="col-md-6">
              <form action="/classes/api/classes<%= studentclassById ? '?classId=' + studentclassById.id : '' %>" method="POST">
                <div class="border p-3 bg-body-tertiary">
                  <div class="mb-3">
                    <label class="form-label">Class Name</label>
                    <input
                      type="text"
                      name="class_name"
                      class="form-control <%= errorFields.includes('class_name') ? 'is-invalid' : '' %>"
                      value="<%= oldInput?.class_name || studentclassById?.class_name || '' %>"
                      placeholder="Enter Class Name"
                      required
                    />
                  </div>

                  <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">
                      <i class="fas fa-paper-plane me-2"></i>Submit
                    </button>
                  </div>
                </div>
              </form>
            </div>

            <div class="col-md-6">
              <div class="table-responsive bg-body-secondary p-2 rounded">
                <table class="table table-bordered table-hover">
                  <thead class="table-light">
                    <tr>
                      <th>S.N</th>
                      <th>Class Name</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (classlist && classlist.length > 0) { %>
                      <% classlist.forEach((cl, index) => { %>
                        <tr>
                          <td><%= index + 1 %></td>
                          <td><%= cl.class_name %></td>
                          <td>
                            <a class="btn btn-outline-success fa fa-edit"
                               href="/classes/class-form?<%= 'classId=' + cl.id %>"></a>
                            <a class="btn btn-outline-danger fa fa-trash"
                               href="/classes/delete-class/<%= cl.id %>"></a>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="3" class="text-center">No classes available</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div> <!-- /.row -->
        </div> <!-- /.card-body -->
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer') %>
